{
  "name": "vue3-json-schema-form",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:core": "cross-env NODE_ENV=lib vue-cli-service build --target lib --inline-vue --name index lib/index.ts",
